<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1"
    android:padding="25dp"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:background="@drawable/logo1"/>


    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:textColor="#000000"
        android:text="Get Your Password"
        android:textSize="25sp">

    </TextView>

    <TextView
        android:id="@+id/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Registered Email"
        android:textColor="#000000"
        android:fontFamily="@font/aclonica"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/Text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Password will be send in your registered Mail ID"
        android:textColor="#000000"
        android:fontFamily="@font/aclonica"
        android:textSize="10sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Mail ID"
            android:textColorHint="#000000"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            tools:ignore="MissingClass">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mail"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/getpassword"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:elevation="40dp"
            android:layout_weight="1"
            android:text="Get Password"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aclonica"
            android:textSize="12sp"
            android:layout_gravity="right"
            android:background="@drawable/roundbuttons"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        >

        <TextView
            android:id="@+id/Text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_bold"
            android:text="New User?"
            android:textColor="#000000"
            android:textSize="20sp"

            />
        <Button
            android:id="@+id/movesignup"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:background="#00000000"
            android:text="Sign Up"
            android:textColor="#FF8383"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_gravity="right"
        >

        <TextView
            android:id="@+id/Text110"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_bold"
            android:text="Have An Account?"
            android:textColor="#000000"
            android:textSize="15sp"

            />
        <Button
            android:id="@+id/movesign111"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:background="#00000000"
            android:text="Log In"
            android:textColor="#FF8383"/>

    </LinearLayout>





</LinearLayout>