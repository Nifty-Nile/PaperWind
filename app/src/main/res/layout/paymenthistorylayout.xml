<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cardview_id"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:background="#00000000"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="20dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ADE1F5"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/head1"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/acme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:text="Bill To"/>

        <TextView
            android:id="@+id/mailtext"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="@font/acme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:text="E-Mail : sachinkartik166@gmail.com"/>

        <TextView
            android:id="@+id/numbertext"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="@font/acme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:text="Mobile Number : 9019350656"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/adis"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="@font/acme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:text="Amount Paid : "/>

            <TextView
                android:id="@+id/amount123"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="@font/acme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="Rs 20"/>


        </LinearLayout>


        <TextView
            android:id="@+id/paymentid"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="@font/acme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:text="Payment ID : EUENE34232UE"/>

        <TextView
            android:id="@+id/timeanddate"
            android:textSize="10sp"
            android:textColor="#000000"
            android:fontFamily="@font/acme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"
            android:text="Date And Time : Sat Oct 31 10:44:20 GMT+05:30 2020"/>






    </LinearLayout>




</androidx.cardview.widget.CardView>